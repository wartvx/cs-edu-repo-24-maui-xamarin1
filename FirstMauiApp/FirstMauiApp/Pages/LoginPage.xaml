<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:FirstMauiApp.Pages"
             xmlns:extensions="clr-namespace:FirstMauiApp.Extensions"
             x:Class="FirstMauiApp.Pages.LoginPage"
             Title="LoginPage">

    <VerticalStackLayout
        x:Name="verticalStackLayout"
        Padding="30,0"
        Spacing="25">

        <Label 
            Text="HomeApp - here's your cosy home"
            TextColor="{extensions:RgbExtension Red=255, Green=0, Blue=0}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="loginBtn"
            Text="{x:Static pages:LoginPage.BUTTON_TEXT}"
            SemanticProperties.Hint="Counts the number of times you click"
            Clicked="OnLoginClicked"
            CornerRadius="{extensions:ButtonViewExtension ButtonStyle=SemiRound}"
            HorizontalOptions="Fill" />

<!--
-->
        <Label 
            x:Name="infoMessageLabel"
            Text=""
            TextColor="Red"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>
